{
  "$schema": "http://json.schemastore.org/solidaritySchema",
  "requirements": {
    "Node": [{ "rule": "cli", "binary": "node", "semver": "0.0.0"}],
    "Watchman": [
      {
        "rule": "cli",
        "binary": "watchman",
        "error": "Please install watchman on this machine. Refer to the official Watchman installation instructions for additional help.",
        "platform": ["darwin", "linux"]
      }
    ],
    "React Native": [
      { "rule": "cli", "binary": "react-native", "semver": "0.0.0" },
      { "rule": "cli", "binary": "react-native", "semver": "0.0.0", "line": 2 }
    ],
    "Package JSON": [
      { "rule": "file", "location": "./package.json"}
    ]
  }
}
